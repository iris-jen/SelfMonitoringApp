<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
             x:Class="SelfMonitoringApp.Views.MainPage"
             Visual="Material">
    <Grid BackgroundColor="{StaticResource PrimaryLight}" Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Text="Self Monitoring Home" Style="{StaticResource HeaderLabelStyle}"/>
        <Button Grid.Row="1" Text="Log Mood" Style="{StaticResource ButtonStyle}"/>
        <Button Grid.Row="2" Text="Log Meal" Style="{StaticResource ButtonStyle}"/>
        <Button Grid.Row="3" Text="Log Sleep" Style="{StaticResource ButtonStyle}"/>
        <Button Grid.Row="4" Text="Log Substance Use" Style="{StaticResource ButtonStyle}"/>
        <Button Grid.Row="5" Text="View Logs" Style="{StaticResource ButtonStyle}"/>
        <Button Text="Settings" Grid.Row="6" Style="{StaticResource ButtonStyle}"/>
    </Grid>
</ContentPage>
